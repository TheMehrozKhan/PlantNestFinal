﻿@model IEnumerable<PlantNest.Models.tbl_user>
@{
    Layout = null;
}
<head>
    <title>View User</title>
</head>
<body>
    @Html.Partial("Layout")
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <div class="body-wrapper">
            <div class="container-fluid">
                <div class="card">
                    <div class="card-body">
                        <div class="container" style="border: 0.5px solid deepskyblue; width: 50%; padding-top: 10px; height: 45px; border-radius: 8px; box-shadow: rgba(100, 100, 111, 0.08) 0px 7px 29px 0px; margin-bottom: 40px;">
                            <h5 class="card-title fw-semibold mb-4 text-center">All Registered Users</h5>
                        </div>
                                <div class="table-responsive">
                                    <table class="table text-nowrap mb-0 align-middle">
                                        <thead class="text-dark fs-4">
                                            <tr>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">Id</h6>
                                                </th>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">Name</h6>
                                                </th>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">EMail</h6>
                                                </th>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">Password</h6>
                                                </th>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">Profile Image</h6>
                                                </th>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">Phone Number</h6>
                                                </th>
                                            </tr>
                                        </thead>
                                        @if (Model != null)
                                        {
                                            foreach (var item in Model)
                                            {
                                                <tbody>
                                                    <tr>
                                                        <td class="border-bottom-0">
                                                            <h6 class="fw-semibold mb-1">@item.u_id</h6>
                                                        </td>
                                                        <td class="border-bottom-0">
                                                            <p class="mb-0 fw-normal">@item.u_name</p>
                                                        </td>
                                                        <td class="border-bottom-0">
                                                            <p class="mb-0 fw-normal">@item.u_email
                                                        <td class="border-bottom-0">
                                                            <h6 class="fw-semibold mb-0 fs-4">@item.u_password</h6>
                                                        </td>
                                                        @if (!string.IsNullOrEmpty(item.u_image))
                                                        {
                                                            <td class="border-bottom-0">
                                                                <img class="profile-picture" src="@Url.Content(item.u_image)" alt="Profile Picture" style="width: 60px; height: 60px; border-radius: 50%; object-fit: cover; margin-bottom: 10px;" />
                                                            </td>
                                                        }
                                                        else
                                                        {
                                                            <td class="border-bottom-0">
                                                                <img class="profile-picture" src="~/Content/Images/TheDefault.png" alt="Default Profile Picture" style="width: 60px; height: 60px; border-radius: 50%; object-fit: cover; margin-bottom: 10px;" />
                                                            </td>

                                                        }
                                                        <td class="border-bottom-0">
                                                            <h6 class="fw-semibold mb-0 fs-4">@item.u_contact</h6>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            }
                                        }
                                            </table>
                                </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
