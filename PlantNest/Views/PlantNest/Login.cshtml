﻿@model PlantNest.Models.tbl_user

@{
    ViewBag.Title = "Login";
}
<body>
    <main>
        <div class="breadcrumb-section">
            <div class="container-fluid custom-container">
                <div class="breadcrumb-wrapper text-center">
                    <h2 class="breadcrumb-wrapper__title" style=" font-family: 'Poppins', sans-serif; ">
                        Login Your Account
                    </h2>
                </div>
            </div>
        </div>
        <div class="login-register-section section-padding-2">
            <div class="container-fluid custom-container">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="login-register">
                            <form method="post">
                                <div class="login-register__form">
                                    <div class="single-form">
                                        <label for="username">Username:</label>
                                        @Html.TextBoxFor(x => x.u_name, new { @class = "single-form__input", @placeholder = "Enter Your Username", @id = "custom-input" })
                                        <span style="color: red">@Html.ValidationMessageFor(x => x.u_name)</span>
                                    </div>

                                    <div class="single-form">
                                        <label for="password">Password:</label>
                                        @Html.TextBoxFor(x => x.u_password, new { @class = "single-form__input", @placeholder = "Enter Your Password", @id = "custom-input", @type = "password" })
                                        <span style="color: red">@Html.ValidationMessageFor(x => x.u_password)</span>
                                    </div>
                                    <div class="single-form" style="display:flex;justify-content:center;align-items:center;">
                                        <button class="single-form__btn btn" style="border-radius: 8px;">
                                            Log In
                                        </button>
                                    </div>
                                </div>
                            </form>
                            <h5 class="text-center mt-5" style="font-size: 16px; font-family: 'Poppins', sans-serif; ">
                                Don't have an account? @Html.ActionLink("Register here", "Register")
                            </h5>
                            @if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <strong>@ViewBag.Error</strong>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>

